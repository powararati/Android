<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vendor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vendor">
        <activity android:name=".activity.login_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.Forget_Password"
            android:theme="@style/NoActionBarShowStatusBar"/>

        <activity android:name=".activity.OTPVerify"
            android:theme="@style/NoActionBarShowStatusBar"/>

        <activity android:name=".activity.Set_Password"
            android:theme="@style/NoActionBarShowStatusBar"/>

        <activity android:name=".activity.Password_Updated"
            android:theme="@style/NoActionBarShowStatusBar"/>
    </application>

</manifest>